<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FolderApp.Views.SectionPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:card="clr-namespace:FolderApp.Views.ItemsView">

    <NavigationPage.TitleView>
        <Label Style="{StaticResource TitleLabel}" Text="{Binding TitleText}" />
    </NavigationPage.TitleView>


    <ContentPage.Content>
        <StackLayout Margin="10">
            <ListView
                x:Name="listView"
                HasUnevenRows="True"
                ItemAppearing="listView_ItemAppearing"
                ItemTapped="listView_ItemTapped"
                ItemsSource="{Binding Posts}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <card:CardView Margin="5,10,5,10" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ActivityIndicator
                Margin="20"
                IsRunning="True"
                IsVisible="{Binding ActivityIndicatorVisible}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>