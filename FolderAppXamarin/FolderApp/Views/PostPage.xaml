<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FolderApp.Views.PostPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:comment="clr-namespace:FolderApp.Views.ItemsView"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Visual="Material"
    mc:Ignorable="d">

    <ContentPage.Content>
        <ScrollView>
            <Grid
                Margin="5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Margin="10"
                    Aspect="AspectFit"
                    HeightRequest="120"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding Post.IsImageNotNull}"
                    Source="{Binding Post.PostImage.Source}"/>
                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Style="{StaticResource SectionTitle}" Text="{Binding Section}" Grid.Column="0" Grid.Row="0"/>
                    <Label HorizontalOptions="EndAndExpand" Text="{Binding PostedDate}" Grid.Column="1" Grid.Row="0" />
                    <Label Text="{Binding Content}" TextType="Html" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15"/>
                </Grid>
                <Grid Grid.Row="2" Margin="15,0,15,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                <Label FontFamily="{StaticResource RalewayBold}" FontSize="20" Text="Comentarios" Grid.Row="0" />
                <StackLayout
                    Grid.Row="1"
                    BindableLayout.ItemsSource="{Binding CommentsList}"
                    Orientation="Vertical"
                    VerticalOptions="StartAndExpand">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <comment:CommentView Margin="5,10" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <StackLayout Orientation="Vertical" VerticalOptions="End" Grid.Row="2">
                    <Entry HorizontalOptions="FillAndExpand" Placeholder="Escriba un comentario"  />
                    <Button Text="Comentar" BackgroundColor="{StaticResource purpleColor}" />
                </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>


</ContentPage>