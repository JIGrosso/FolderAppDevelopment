        <Frame CornerRadius="10"
               BorderColor="Gray"
               Padding="8">
            <StackLayout Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Text="{Binding Title}"
                           FontSize="Medium"
                           FontAttributes="Bold"/>
                    <BoxView Color="Gray"
                             HorizontalOptions="Fill"
                             Grid.Row="1"/>
                    <Label Grid.Row="2"
                           Text="{Binding Section}"
                           FontAttributes="Bold"/>
                    <Label Grid.Row="3"
                           Text="{Binding PostedDate}" />
                </Grid>
            </StackLayout>
        </Frame>        
  </ContentView.Content>

